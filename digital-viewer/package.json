{
  "name": "pathology-digital-viewer",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Digital Viewer Module for Pathology Portal Platform",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "dev:all": "npm run dev --workspaces --if-present",
    "build": "vite build",
    "build:packages": "npm run build --workspaces --if-present",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "npm run lint --workspaces --if-present",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "dev:viewer": "vite",
    "dev:session": "npm run dev --workspace=@pathology/session-service",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.7.0",
    "prettier": "^3.4.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "jsdom": "^26.0.0",
    "openseadragon": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
