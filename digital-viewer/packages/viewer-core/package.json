{
  "name": "@pathology/viewer-core",
  "version": "1.0.0",
  "description": "Digital Pathology Viewer - Svelte 5 + OpenSeadragon core viewer component",
  "type": "module",
  "svelte": "./src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "svelte": "./src/index.ts",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components": {
      "svelte": "./src/components/index.ts",
      "import": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "svelte-package",
    "dev": "vite dev",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest"
  },
  "dependencies": {
    "@pathology/fdp-lib": "*",
    "@pathology/review-state": "*",
    "openseadragon": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.3.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@types/openseadragon": "^3.0.10",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tslib": "^2.8.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "keywords": [
    "pathology",
    "digital-pathology",
    "openseadragon",
    "svelte",
    "viewer"
  ],
  "license": "Apache-2.0"
}
